<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/flight">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/item_shape"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="20dp"
        >



        <TextView
            android:id="@+id/txtV5"
            style="@style/blueTextMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"

            android:text="Send To:" />

        <EditText
            android:id="@+id/edit_text_to"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textEmailAddress"
            android:text="xxxx@xxx.com"
            style="@style/blueTextSmall"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-7dp"/>



        <TextView
            android:id="@+id/txtV6"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Time"
            style="@style/blueTextMiddle"/>

        <EditText
            android:id="@+id/editTextTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="time"
            style="@style/blueTextSmall"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="-7dp"/>

        <TextView
            android:id="@+id/text_view_subject"
            style="@style/blueTextMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Subject:"/>

        <EditText
            android:id="@+id/edit_text_subject"
            style="@style/blueTextSmall"
            android:layout_width="225dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-7dp"
            android:layout_marginBottom="5dp"
            android:text="" />

        <TextView
            android:id="@+id/txtV7"
            style="@style/blueTextMiddle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="Body:" />

        <android.support.constraint.ConstraintLayout
            android:layout_width="347dp"
            android:layout_height="315dp"
            android:layout_marginTop="-25dp"
            android:layout_marginBottom="5dp">

            <EditText
                android:id="@+id/edit_text_body"
                style="@style/blueTextSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_marginBottom="8dp"
                android:hint=""
                android:inputType="textMultiLine"
                android:minLines="5"
                android:text="xzzzzzzzzzz"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />

            <Button
                android:id="@+id/buttonTemplate"
                style="@style/blueTextSmall"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="-20dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_line_white"
                android:text="T"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.611"
                app:layout_constraintStart_toEndOf="@+id/edit_text_body"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0" />


        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp">

            <Button
                android:id="@+id/save"
                style="@style/blueTextSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/border_line_white"
                android:text="Save"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/buttonCancel"
                style="@style/blueTextSmall"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:onClick="Back_onClick"
                android:text="Cancel"
                android:background="@drawable/border_line_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/save"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </android.support.constraint.ConstraintLayout>


    <LinearLayout
        android:id="@+id/datetime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal"
        android:visibility="invisible">

        <TextView
            android:id="@+id/clock_year"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="yyyy" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <TextView
            android:id="@+id/clock_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="mm" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/" />

        <TextView
            android:id="@+id/clock_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dd" />

        <TextView
            android:id="@+id/clock_hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="HH" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=":" />

        <TextView
            android:id="@+id/clock_minute"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MM" />
    </LinearLayout>

    </LinearLayout>

</ScrollView>